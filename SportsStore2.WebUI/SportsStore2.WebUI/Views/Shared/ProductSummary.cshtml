@model SportsStore2.Domain.Entities.Product

<div class="item">
    <h2>@Model.Name</h2>
    <h3>@Model.Description</h3>
    <h3>@Model.Price.ToString("c")</h3>
    @if (Model.ImageData != null) {
    <img height="50" width="50" src="@Url.Action("GetImage", "Product", new { productId = Model.ProductId })" />
    }
</div>